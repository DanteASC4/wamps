{
  "compilerOptions": {
    "target": "ESNext",
    "moduleResolution": "node",
    "outDir": "./bin",
    "rootDir": "./src",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "removeComments": true,
    "strict": true,
  },
  "include": ["src/**/*"],
  "exclude": ["./node_modules/"]
}
