{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ES2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "removeComments": true,

    "strict": true,
    "noUncheckedIndexedAccess": true,

    "moduleResolution": "NodeNext",
    "module": "NodeNext",

    "outDir": "./bin",
    "rootDir": "./src",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": ["src/**/*"],
  "exclude": ["./node_modules/"]
}
